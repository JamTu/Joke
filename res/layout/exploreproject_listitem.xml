<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_layout_item_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" > <!-- 项目作者头像 -->

        <com.jamtu.widget.CircleImageView
            android:id="@+id/listitem_userface"
            style="@style/UserFaceImageStyle" />
        <!-- 项目名称 -->

        <TextView
            android:id="@+id/listitem_title"
            style="@style/project_list_title"
            android:gravity="center_vertical"
            android:paddingLeft="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical" >

        <!-- 项目描述 -->

        <TextView
            android:id="@+id/listitem_description"
            style="@style/project_list_description" />

        <ImageView
            android:id="@+id/listitem_img"
            style="@style/project_list_img"
            android:layout_width="match_parent"
            android:layout_marginTop="8dip"
            android:minHeight="120dp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_imgview"
            style="@style/project_list_img"
            android:layout_width="match_parent"
            android:layout_marginTop="8dip"
            android:minHeight="240dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/listitem_votes"
            style="@style/project_list_someinfo"
            android:layout_marginTop="8dip" />
    </LinearLayout>

</LinearLayout>